<div
  class="fade-in relative overflow-hidden rounded-lg <%= is_private ? "border-2 border-blue-500 " : "" %>bg-white shadow-lg transition-all duration-200 hover:-translate-y-1 hover:shadow-xl dark:bg-gray-800 dark:border-blue-400 group"
  data-photo-selection-target="item"
  data-photo-id="<%= id %>"
  data-is-deleted="<%= defined?(is_deleted) && is_deleted ? "true" : "false" %>"
  data-is-private="<%= defined?(is_private) && is_private ? "true" : "false" %>"
  data-owner-id="<%= defined?(owner_id) ? owner_id : "" %>">
  <% if current_user_authenticated? %>
    <div class="selected-overlay absolute inset-0 bg-blue-500 opacity-0 transition-opacity duration-200 pointer-events-none"></div>
    <div class="absolute left-2 top-2 z-10 opacity-0 group-hover:opacity-100 data-[selected]:opacity-100 transition-opacity duration-200">
      <input
        type="checkbox"
        class="photo-checkbox size-5 rounded border-2 border-gray-300 bg-white text-blue-600 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-800 dark:text-blue-500"
        data-action="mousedown->photo-selection#toggleSelection"
        data-photo-selection-target="checkbox"
        id="photo_item[<%= id %>].selected"
      />
    </div>
  <% end %>
  <a
    href="/photo-details/<%= id %>"
    data-turbo-frame="photo-modal-frame"
    class="block cursor-pointer no-underline"
  >
    <% if is_video(path) %>
      <video src="/photos/<%= path %>" class="block h-64 w-full object-cover" autoplay muted loop ></video>
    <% else %>
      <img src="/photos/<%= path %>" alt="<%= get_filename(path) %>" class="block h-64 w-full object-cover" />
    <% end %>
    <div class="p-4">
      <div class="mb-1 break-words font-bold text-gray-800 dark:text-gray-200">
        <%= get_filename(path) %>
      </div>
      <div class="break-words text-sm text-gray-600 dark:text-gray-400">
        <%= path %>
      </div>
      <% if current_user_admin? && defined?(username) && username && !username.empty? %>
        <div class="mt-1 text-xs text-gray-500 dark:text-gray-500">
          by <%= username %>
        </div>
      <% end %>
    </div>
  </a>
  <button
    type="button"
    data-turbo="false"
    data-controller="copy"
    data-copy-photo-path-value="/photos/<%= path %>"
    data-action="click->copy#copy"
    class="absolute size-10 right-2 top-2 z-10 rounded-full bg-white/50 p-2 text-gray-800 shadow-md backdrop-blur-sm transition-all duration-200 hover:bg-white hover:shadow-lg dark:bg-gray-800/50 dark:text-gray-200 dark:hover:bg-gray-800"
    aria-label="Copy image URL to clipboard"
  >
    <div class="icon-copy"></div>
  </button>
  <div class="absolute bottom-2 right-2 z-10 flex gap-1">
    <% if current_user_admin? && defined?(is_deleted) && is_deleted %>
      <div class="h-3 w-3 rounded-full bg-red-500 shadow-md" title="Deleted"></div>
    <% end %>
    <% if current_user_admin? && defined?(is_private) && is_private && defined?(owner_id) && owner_id != current_user_id %>
      <div class="h-3 w-3 rounded-full bg-blue-500 shadow-md" title="Private item from another user"></div>
    <% end %>
  </div>
</div>
