<turbo-frame id="presets-modal-frame">
  <div class="fixed inset-0 z-50" id="presets-modal" data-modal-target="content" data-action="click->modal#handleBackdropClick">
    <div
      class="absolute inset-0 bg-black/50 backdrop-blur-sm fade-in"
      aria-hidden="true"
    ></div>
    <div class="fixed inset-0 overflow-y-auto fade-in">
      <div class="flex min-h-full items-center justify-center p-4">
        <div
          class="max-h-[90vh] w-full max-w-6xl overflow-y-auto rounded-lg bg-white shadow-xl dark:bg-gray-800"
        >
          <div class="p-6">
            <div class="mb-4 flex items-center justify-between">
              <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200">Available Presets</h2>
              <button
                type="button"
                data-action="click->modal#close"
                class="text-gray-500 cursor-pointer hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
                aria-label="close"
              >
                <div class="icon-x text-xl"></div>
              </button>
            </div>

            <% if presets && !presets.empty? %>
              <% presets.each do |preset| %>
                <div class="mb-6 rounded-lg border border-gray-200 p-4 dark:border-gray-700">
                  <div class="mb-2 flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200"><%= escape_html(preset.name) %></h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">by <%= escape_html(preset.username || preset.user_id) %></span>
                  </div>
                  <div class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                    <p><%= escape_html(preset.prompt) %></p>
                  </div>
                  <div class="flex gap-4">
                    <% if preset.example_image && !preset.example_image.empty? %>
                      <div class="flex-shrink-0">
                        <img src="<%= preset.example_image %>" alt="<%= escape_html(preset.name) %>" class="h-32 w-32 rounded-lg object-cover">
                      </div>
                    <% else %>
                      <div class="flex-shrink-0 h-32 w-32 rounded-lg bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-500 dark:text-gray-400 text-xs">No image</div>
                    <% end %>
                    <% if preset.parameters && !preset.parameters.empty? %>
                      <div class="flex-1 rounded bg-gray-100 p-3 text-xs dark:bg-gray-700">
                        <strong class="text-gray-700 dark:text-gray-300">Parameters:</strong>
                        <pre class="mt-1 overflow-x-auto text-gray-600 dark:text-gray-400"><%= format_json(preset.parsed_parameters) %></pre>
                      </div>
                    <% else %>
                      <div class="flex-1 rounded bg-gray-100 p-3 text-xs dark:bg-gray-700 text-gray-500 dark:text-gray-400">No parameters</div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div
                class="rounded border border-gray-200 bg-gray-100 p-8 text-center text-gray-600 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-400"
              >
                No presets available.
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>